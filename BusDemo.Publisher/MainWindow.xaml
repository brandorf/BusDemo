<Window x:Class="BusDemo.Publisher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusDemo.Publisher"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Label>We put our faith in...</Label>

            <StackPanel Width="200" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,25,0,50">
                <Border BorderThickness="2" BorderBrush="Black">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="2" Opacity="0.5"/>
                    </Border.Effect>
                <TextBlock FontFamily="Impact" FontSize="24" Text="{Binding Name}"> </TextBlock>
                </Border>
        </StackPanel>

        <Button Command="{Binding ButtonClick}" Width="200" Height="100">POW!</Button>
    </Grid>
</Window>
